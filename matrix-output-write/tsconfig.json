{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["ESNext"],
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "newLine": "lf",
    "outDir": "build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
